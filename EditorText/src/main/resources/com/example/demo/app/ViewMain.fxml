<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane prefHeight="382.0" prefWidth="515.0" xmlns="http://javafx.com/javafx/11.0.1"
            xmlns:fx="http://javafx.com/fxml/1">
    <padding>
        <Insets bottom="10.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <top>
        <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="61.0" prefWidth="263.0" text="Text Editor"
               textAlignment="CENTER" BorderPane.alignment="CENTER">
            <font>
                <Font name="System Bold" size="18.0"/>
            </font>
            <BorderPane.margin>
                <Insets bottom="15.0"/>
            </BorderPane.margin>
        </Label>
    </top>

    <center>
        <VBox alignment="CENTER">
            <GridPane prefHeight="87.0" prefWidth="475.0">
                <columnConstraints>
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                </columnConstraints>
                <rowConstraints>
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                </rowConstraints>
                <children>
                    <Button fx:id="btnNewText" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false"
                            prefHeight="60.0" prefWidth="150.0" text="New Text" textAlignment="CENTER"
                            GridPane.halignment="CENTER"/>
                    <Button fx:id="btnEditText" alignment="CENTER" mnemonicParsing="false" prefHeight="60.0"
                            prefWidth="150.0" text="Edit Text" textAlignment="CENTER" GridPane.columnIndex="1"
                            GridPane.halignment="CENTER"/>
                </children>
            </GridPane>
        </VBox>
    </center>

    <bottom>
        <HBox alignment="CENTER_RIGHT" prefHeight="74.0" prefWidth="465.0" BorderPane.alignment="CENTER">
            <children>
                <Button fx:id="btnExit" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false"
                        prefHeight="36.0" prefWidth="73.0" text="Exit" textAlignment="CENTER">
                    <HBox.margin>
                        <Insets right="40.0"/>
                    </HBox.margin>
                </Button>
            </children>
        </HBox>
    </bottom>


</BorderPane>
